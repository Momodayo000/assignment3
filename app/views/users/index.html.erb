<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/list', book: @books, user: current_user %>
    </div>


<div class="col-md-8 offset-md-1">
      <h1>Users</h1>

      <table>
        <tr>
          <th><br></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>

      <% @books.each do |book| %>
        <tr>

          <td><br></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
