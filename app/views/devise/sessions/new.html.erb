<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h5 class="mb-4">ログイン</h5>
      <p class="p-3">会員の方はこちらからログイン</p>

      <%= form_with model: @user, url: user_session_path do |f| %>

        <div class="row form-group justify-content-center">
          <%= f.label :name, "名前", class: "col-md-2 col-form-label" %>
          <div class="col-md-6">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "name", class: "form-control" %>
          </div>
        </div>

        <div class="row form-group justify-content-center">
          <%= f.label :password, "パスワード", class:"col-md-2 col-form-label" %>
          <div class="col-md-6 mb-3">
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>

        <div class="row justify-content-center">
          <div class="col-4 mb-5">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>