
<h1>User info</h1>
<%= image_tag user.get_profile_image(100,100) %>

<h4>name</h4>
<p><%= user.name %></p>

<h4>introduction</h4>
<p><%= user.introduction %></p>

<%= link_to edit_user_path(user), class: "btn btn-primary form-control" do %>
<i class="fa-solid fa-user-cog"></i>
<% end %>

<h1>New book</h1>

<%= form_with model: book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
