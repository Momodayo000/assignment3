<div>
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title"%>
  <label for="inputOpinion">Opinion</label>
  <%= f.text_field :body, autofocus: true, id:"inputOpinion", placeholder:"Opinion"%>
  <%= f.submit "Update Book" %>

  <%= link_to "Show", @book %>
  <%= link_to "Back", books_path %>

<% end %>

